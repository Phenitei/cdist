acl_path="/$__object_id"

[ ! -e "$acl_path" ] && exit 0

if ! command -v getfacl 2>/dev/null
then
    echo 'getfacl not available' >&2
    exit 1
fi

getfacl "$acl_path" 2>/dev/null \
    | grep -E '^((default:)?(user|group):[^:]|(default:)?mask::)' \
    || true
